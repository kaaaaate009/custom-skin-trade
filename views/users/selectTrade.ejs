<%- include('../partials/header.ejs') %>

<div class="row index-content">
  <div class="col-8 index-left">
    <section class="product-section skin-pad">
      <div class="container-fluid mt-3">
        <div class="container-fluid w-100 font-weight-bold text-center">
          <h3>Select the items you want to trade</h3>
        </div>
        <hr class="mt-3 mb-3">
        <div class="container main-container mt-lg-1 mb-lg-5">
          <form action="/users/trade/" method="POST">
            <input type="hidden" value="<%= accepter_user_id %>" name="accepter_user_id">
            <input type="hidden" value="<%= tradeId %>" name="trade_with">
            <div class="row w-100 m-auto font-weight-bold">
              <div class="col-12">
                <h5>Items avaialbe for trading</h5>
              </div>
              <table class="table table-bordered table-striped h5">
                <thead class="text-center">
                  <tr>
                    <th>Selection</th>
                    <th>Skin Category</th>
                    <th>Item Name</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(productsData.length){
                            productsData.forEach(val => { %>
                  <tr>
                    <td class="text-center"><input type="radio" name="trade_item" value="<%=val._id %>" style="cursor: pointer;" required></td>
                    <td class="text-center h4"><%= val.item_category %></td>
                    <td class="text-center h4"><%= val.item_name %></td>
                  </tr>
                  <%  })%>
                  <tr>
                    <td class="text-left" colspan="4">
                      <button type="submit" class="btn btn-success">Initiate Trade</button>
                      <a href="/trade" class="btn btn-danger">Cancel Trade</a>
                    </td>
                  </tr>
                  <% }else{ %>
                  <tr>
                    <td colspan="4">No skins avaialbe to trade</td>
                  </tr>
                  <% }%>
                </tbody>
              </table>
            </div>
          </form>
        </div>
      </div>
    </section>
  </div>
</div>




<%- include('../partials/footer.ejs') %>