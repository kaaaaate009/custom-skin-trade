<%- include('../partials/header.ejs') %>

<div class="row index-content">
  <div class="col-8 index-left">
    <section class="product-section skin-pad">

      <div class="container-fluid w-100 font-weight-bold text-center">
        <h3>Manage Trade Offer</h3>
      </div>
      <hr class="mt-3 mb-3">
      <form action="" method="POST">
        <div class="container main-container mt-lg-5 mb-lg-5">
          <div class="row w-50 m-auto font-weight-bold">
            <div class="col-lg-6">
              <p><%= data.trade_item.item_category+" "+data.trade_item.item_name%></p>
            </div>
            <div class="col-lg-6">
              <p><%= data.trade_with.item_category+" "+data.trade_with.item_name%></p>
            </div>

            <div class="col-lg-12 text-center mt-3">
              <div class="form-group">
                <% if(currentUser == data.creater_user_id){%>
                <button class="btn btn-danger" formmethod="POST" formaction="/users/offer/<%=data._id%>?_method=DELETE">Cancel Trade Offer</button>
                <% }else{ %>
                <input type="text" value="<%= data._id %>" name="offer_id">
                <button class="btn btn-success" formmethod="POST" formaction="/users/offer/">Accept Trade Offer</button>
                <button class="btn btn-danger" formmethod="POST" formaction="/users/offer/<%=data._id%>?_method=DELETE">Reject Trade Offer</button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>





<%- include('../partials/footer.ejs') %>